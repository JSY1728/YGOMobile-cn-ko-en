<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/xb_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:AutoPlayTime="3500"
        app:isClipChildrenMode="true"
        app:isClipChildrenModeLessThree="true"
        app:pageChangeDuration="800"
        app:pointsVisibility="false"
        app:tipTextSize="12sp"
        app:clipChildrenTopBottomMargin="5dp"
        app:isHandLoop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin">


        <com.ourygo.ygomobile.view.OYTabLayout
            android:id="@+id/tl_game_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            app:tl_indicator_color="@color/colorAccent"
            app:tl_indicator_corner_radius="2dp"
            app:tl_indicator_gravity="BOTTOM"
            app:tl_indicator_height="0dp"
            app:tl_indicator_margin_bottom="2dp"
            app:tl_indicator_margin_top="10dp"
            app:tl_indicator_style="NORMAL"
            app:tl_indicator_width="30dp"
            app:tl_tab_padding="10dp"
            app:tl_tab_space_equal="false"
            app:tl_textBold="SELECT"
            app:tl_textSelectColor="@color/black"
            app:tl_textUnselectColor="@color/grayDark"
            app:tl_textsize="25sp"
            app:tl_underline_color="@color/transparent"
            app:tl_underline_height="10dp" />




        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/click_background"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:id="@+id/tv_add_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:text="@string/add_setting"
            android:textSize="10sp" />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_game"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin">

        <com.ourygo.ygomobile.view.OYTabLayout
            android:id="@+id/tl_replay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            app:tl_indicator_color="@color/colorAccent"
            app:tl_indicator_corner_radius="2dp"
            app:tl_indicator_gravity="BOTTOM"
            app:tl_indicator_height="0dp"
            app:tl_indicator_margin_bottom="2dp"
            app:tl_indicator_margin_top="10dp"
            app:tl_indicator_style="NORMAL"
            app:tl_indicator_width="30dp"
            app:tl_tab_padding="10dp"
            app:tl_tab_space_equal="false"
            app:tl_textBold="SELECT"
            app:tl_textSelectColor="@color/black"
            app:tl_textUnselectColor="@color/grayDark"
            app:tl_textsize="25sp"
            app:tl_underline_color="@color/transparent"
            app:tl_underline_height="10dp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:padding="10dp"
            android:background="@drawable/click_background"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:id="@+id/tv_view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_more"
            android:textSize="10sp" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_replay"
        android:layout_marginRight="@dimen/main_margin"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>