<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include-->
        <!--layout="@layout/content_toolbar"/>-->
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_and_statusbar_height">
    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_avatar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/colorAccentLight"
            app:civ_border_width="1dp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/colorAccent"
            android:id="@+id/tv_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_avatar"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_setting"
            app:srcCompat="@drawable/ic_settings_black_24dp"
            android:layout_centerVertical="true"
            android:layout_width="22dp"
            android:layout_height="22dp" />

    </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin"
        android:background="@color/colorAccentLight"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <com.ourygo.ygomobile.view.OYTabLayout
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tl_tab"
        app:tl_tab_padding="10dp"
        android:paddingLeft="10dp"
        app:tl_indicator_corner_radius="2dp"
        app:tl_indicator_margin_top="10dp"
        app:tl_indicator_height="0dp"
        app:tl_underline_height="10dp"
        app:tl_indicator_width="30dp"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_style="NORMAL"
        app:tl_textsize="25sp"
        app:tl_underline_color="@color/transparent"
        app:tl_indicator_color="@color/colorAccent"
        app:tl_textSelectColor="@color/black"
        app:tl_textUnselectColor="@color/grayDark"
        app:tl_indicator_margin_bottom="2dp"
        app:tl_tab_space_equal="false"
        app:tl_textBold="SELECT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"/>

</LinearLayout>